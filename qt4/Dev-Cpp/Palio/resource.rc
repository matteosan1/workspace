IDR_MENU MENU
{
    POPUP "&File"
    {
        MENUITEM "&Nuovo gioco\t", ID_NEW_GAME
        MENUITEM "&Carica gioco", ID_LOAD_GAME
        MENUITEM "&Salva gioco", ID_SAVE_GAME, GRAYED
        MENUITEM SEPARATOR
        MENUITEM "&Avvia Palio", ID_START_GAME, GRAYED
        MENUITEM SEPARATOR
        MENUITEM "S&tampa...", ID_PRINT_GAME, GRAYED
        MENUITEM SEPARATOR
        MENUITEM "&Esci", ID_FILE_EXIT
    }    
    POPUP "&Visualizza"
    {
        MENUITEM "S&ituazione Contrade", ID_VIEW_CONTRADE, GRAYED
        MENUITEM "&Vittorie", ID_VIEW_VITTORIE, GRAYED
        MENUITEM "&Cuffia", ID_VIEW_CUFFIA, GRAYED
        MENUITEM "&Fantini", ID_VIEW_FANTINI, GRAYED
    }
    POPUP "&Help"
    {
        MENUITEM "&Informazioni su WinTDPalio...", ID_ABOUT_DIALOG
    }    
}  

