        MENUITEM SEPARATOR
        MENUITEM "S&tampa...", ID_PRINT_GAME, GRAYED
        MENUITEM SEPARATOR
        MENUITEM "&Esci", ID_FILE_EXIT
    }    
    POPUP "&Visualizza"
    {
        MENUITEM "S&ituazione Contrade", ID_VIEW_CONTRADE
        MENUITEM "&Vittorie", ID_VIEW_VITTORIE
        MENUITEM "&Cuffia", ID_VIEW_CUFFIA
        MENUITEM "&Fantini", ID_VIEW_FANTINI
    }
    POPUP "&Help"
    {
        MENUITEM "&Informazioni su WinTDPalio...", ID_ABOUT_DIALOG
    }    
}  

