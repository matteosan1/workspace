IDR_MYMENU MENU
{
    POPUP "&File"
    {
        MENUITEM "&Nuovo gioco\t", ID_NEW_GAME
        MENUITEM "&Carica gioco", ID_LOAD_GAME
        MENUITEM "&Salva gioco", ID_SAVE_GAME
        MENUITEM SEPARATOR
